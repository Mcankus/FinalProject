<h2>@ViewBag.Title</h2>

<p style = "color: red" data-bind="text: MessageToClient"></p>

<div>
    <div class ="form-group">
        <label class ="control-label" for ="DoctorName">Doctor Name: </label>
        <input class ="form-control"name = "DoctorName" id = "DoctorName" data-bind="value: DoctorName, event: {change: flagDoctorAsEdited}" />
    </div>
    <div class ="form-group">
        <label class ="control-label" for ="PracticeName">Practice Name: </label>
        <input class ="form-control"name = "PracticeName" id = "PracticeName" data-bind="value: PracticeName, event: {change: flagDoctorAsEdited}" />
    </div>
</div>
<table class ="table table-striped table-bordered table-hover table-condensed">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone Number</th>
        <th><button data-bind="click: addPatient" class="btn btn-info btn-sm">Add Patient</button></th>
    </tr>
    <tbody data-bind="foreach: Patients">
        <tr>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: FirstName, event: {change: flagPatientAsEdited}, hasfocus: true"/></td>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: LastName, event: {change: flagPatientAsEdited}" /></td>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: Street, event: {change: flagPatientAsEdited}" /></td>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: City, event: {change: flagPatientAsEdited}" /></td>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: State, event: {change: flagPatientAsEdited}" /></td>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: ZipCode, event: {change: flagPatientAsEdited}" /></td>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: PhoneNumber, event: {change: flagPatientAsEdited}" /></td>
            <td class="form-group">Delete</td>
        </tr>
    </tbody>
</table>
<p><a href="/" class=" btn btn-default btn-sm">&laquo;Back to List</a>
</p>
<p><button data-bind="click: save" class="btn btn-primary">Save</button></p>


