@model IEnumerable<MyProject.Model.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-striped table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PracticeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PracticeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DoctorId }, new { @class = "btn btn-info"} )
            @Html.ActionLink("Details", "Details", new { id=item.DoctorId } ,new { @class = "btn btn-primary"} ) 
            @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
