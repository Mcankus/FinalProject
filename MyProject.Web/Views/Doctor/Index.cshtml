@model IEnumerable<MyProject.Model.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2 class="col-lg-10 col-md-8 col-sm-6 col-xs-4 col-md-offset-2">Doctor Index</h2>


<div class ="row">
    <div class="col-lg-8 col-md-6 col-sm-4 col-xs-2 col-md-offset-2">
        <div class=" table-responsive">
        <table class="table table-bordered table-striped table-hover table-condensed">
            <tr>
                <th>
                   Doctor Name
                </th>
                <th>
                    Practice Name
                </th>
                @*<th>Photo</th>*@
                <th>@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-sm" })</th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td  class="col-md-3">
                        @Html.DisplayFor(modelItem => item.DoctorName)
                    </td>
                    <td  class="col-md-3">
                        @Html.DisplayFor(modelItem => item.PracticeName)
                    </td>
                    @*<td class="col-md-3">
                        @Html.DisplayFor(modelItem => item.Photo)
                    </td>*@
                    <td class="col-md-2">
                        @Html.ActionLink("Edit", "Edit", new { id=item.DoctorId }, new { @class = "btn btn-info"} )
                        @Html.ActionLink("Details", "Details", new { id=item.DoctorId } ,new { @class = "btn btn-primary"} ) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
</div>

